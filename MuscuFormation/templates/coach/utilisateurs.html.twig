<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #0a0a0a;
        color: white;
        padding: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #2e2e2e;
        border-radius: 8px;
        overflow: hidden;
    }

    table th, table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #404040;
    }

    table th {
        background-color: #5cd65c;
        color: black;
    }
</style>

<h1>Liste des Coaches</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        {% for coach in coaches %}
            <tr>
                <td>{{ coach.id }}</td>
                <td>{{ coach.email }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucun coach trouv√©.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
