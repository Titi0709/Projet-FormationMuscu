<h1>Achats pour le programme Prise de Masse</h1>
<table>
    <thead>
        <tr>
            <th>ID Achat</th>
            <th>Email Utilisateur</th>
            <th>Date Achat</th>
        </tr>
    </thead>
    <tbody>
        {% for achat in achatsMasse %}
            <tr>
                <td>{{ achat.id }}</td>
                <td>{{ achat.utilisateur.email }}</td>
                <td>{{ achat.dateAchat|date('d/m/Y') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun achat trouv√© pour ce programme.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
